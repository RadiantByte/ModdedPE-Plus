<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppErrorTheme" parent="@style/Theme.Material3.DayNight">
        <item name="colorPrimary">#444444</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorOnPrimary">#FF448aff</item>
        <item name="colorAccent">#FF448aff</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="TcuiDialog" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowAnimationStyle">@style/TcuiDialogAnimations</item>
    </style>

    <style name="TcuiDialogAnimations">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="NegativeButtonStyle" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="NeutralButtonStyle" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>

